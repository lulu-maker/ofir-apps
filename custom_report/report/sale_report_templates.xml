                        </div>
                        <div style="font-size:12px;padding-top:8px;"><strong>VAT:</strong><t t-esc="o.company_id.vat"/>
                        </div>
                        <div style="font-size:12px;">
                            <strong>Email:</strong>
                            <t t-esc="o.partner_id.email"/>
                        </div>
                    </div>
                    <div class="col-1"/>
                    <div class="col-4" style="padding-top:16px;padding-bottom:16px;">
                        <div class="row" style="padding:5px;margin-bottom:3px;background-color:lightgray;">
                            <div class="col-6">
                                <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                                    <span t-if="o.state not in ['draft','sent']">Order #</span>
                                    <span t-if="o.state in ['draft','sent']">Quotation #</span>
                                </t>
                                <t t-if="env.context.get('proforma', False) or is_pro_forma">
                                    <span>Pro-Forma Invoice #</span>
                                </t>
                            </div>
                            <div class="col-6 text-right">
                                <div style="font-size:12px;">
                                    <strong>
                                        <t t-esc="o.name"/>
                                    </strong>
                                </div>
                            </div>
                        </div>
                        <div class="row" style="padding-top:5px;padding-bottom:5px;background-color:lightgray;">
                            <div class="col-5">
                                <div style="font-size:12px;">
                                    <strong>Quatation Date:</strong>
                                </div>
                                <div style="font-size:12px;">
                                    <strong>Sales Person:</strong>
                                </div>
                                <div style="font-size:12px;">
                                    <strong>Expiration:</strong>
                                </div>
                            </div>
                            <div class="col-7 text-right">
                                <div style="font-size:12px;">
                                    <t t-esc="o.date_order.strftime('%d.%m.%Y %H:%M')"/>
                                </div>
                                <div style="font-size:12px;"><t t-esc="o.user_id.name"/></div>

                                <div style="font-size:12px;">
                                    <t t-esc="o.payment_term_id.name"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-top:24px;background-color:lightgray;padding:5px;">
                    <div class="col-6">
                        <div class="row">
                            <div class="col-2">
                                <div style="font-size:12px;">
                                    No.
                                </div>
                            </div>
                            <div class="col-10">
                                <div style="font-size:12px;">
                                    <strong>Description </strong>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="row">
                            <div class="col-2 text-center">
                                <div style="font-size:12px;">
                                    Quantity
                                </div>
                            </div>
                            <div class="col-3 text-center">
                                <div style="font-size:12px;">
                                    Unit Price
                                </div>
                            </div>
                            <div class="col-2 text-center">
                                <div style="font-size:12px;">
                                    Taxes
                                </div>
                            </div>
                            <div class="col-2 text-center">
                                <div style="font-size:12px;">
                                    Disc.%
                                </div>
                            </div>
                            <div class="col-3 text-right">
                                <div style="font-size:12px;">
                                    Subtotal
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <t t-set="seq" t-value="1"/>
                <t t-foreach="o.order_line" t-as="line">
                    <div class="row" style="border: 1px solid #f1f1f1;">

                        <div class="col-6">
                        <div class="row">
                            <div class="col-2 text-center">
                                <div style="font-size:12px;">
                                    <t t-esc="seq"/>
                                </div>
                                <t t-set="seq" t-value="seq + 1"/>
                            </div>
                            <div class="col-10">
                                <div style="font-size:12px;">
                                      <t t-esc="line.name"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="row">
                            <div class="col-2 text-center">
                                <div style="font-size:12px;">
                                   <t t-esc="'{:.2f}'.format(line.product_uom_qty)"/>
                                </div>
                            </div>
                            <div class="col-3 text-center">
                                <div style="font-size:12px;">
                                    <t t-esc="line.price_unit" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
<!--                                    <t t-esc="'{:.2f}'.format(line.price_unit)"/>-->
                                </div>
                            </div>
                            <div class="col-2 text-center">
                                <div style="font-size:12px;">
                                    <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_id))"/>
                                </div>
                            </div>
                            <div class="col-2 text-center">
                                <div style="font-size:12px;">
                                    <span t-esc="line.discount"/>
                                </div>
                            </div>
                            <div class="col-3 text-right">
                                <div style="font-size:12px;">
                                     <t t-esc="line.price_subtotal" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </div>
                            </div>
                        </div>
                    </div>
